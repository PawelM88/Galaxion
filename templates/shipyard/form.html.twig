{{ form_start(form) }}
    <div class="row">
        <div class="mb-3">
                {{ form_widget(form.save) }}
            </div>      
        <div class="col-md-3">            
            <div class="form-section">
                <h2>Cockpit</h2>
                {{ form_widget(form.cockpit) }}                             
                <span>Cost: <span id="cockpit-cost" class="text-primary"></span></span>
            </div>

            <div class="form-section">
                <h2>Energy Weapon</h2>
                {{ form_widget(form.energyWeapon) }}
                <span>Cost: <span id="energyWeapon-cost" class="text-primary"></span></span>                
            </div>

            <div class="form-section">
                <h2>Rocket Weapon</h2>
                {{ form_widget(form.rocketWeapon) }}
                <span>Cost: <span id="rocketWeapon-cost" class="text-primary"></span></span>
            </div>
        </div>

        <div class="col-md-6 text-center">
            <img src="{{ asset('images/corvette.jpg') }}" alt="image of a corvette class spaceship" 
            class="img-fluid w-100 d-block mx-auto my-3">
        </div>

        <div class="col-md-3">
            <div class="form-section">
                <h2>Engine</h2>
                {{ form_widget(form.engine) }}
                <span>Cost: <span id="engine-cost" class="text-primary"></span></span>
            </div>

            <div class="form-section">
                <h2>Armor</h2>
                {{ form_widget(form.armor) }}                
                <span>Cost: <span id="armor-cost" class="text-primary"></span></span>
            </div>

            <div class="form-section">
                <h2>Energy Shield</h2>
                {{ form_widget(form.energyShield) }}
                <span>Cost: <span id="energyShield-cost" class="text-primary"></span></span>
            </div>

            <div class="form-section">
                <h2>Defence System</h2>
                {{ form_widget(form.defenceSystem) }}
                <span>Cost: <span id="defenceSystem-cost" class="text-primary"></span></span>
            </div>            
        </div>
    </div>  
{{ form_end(form) }}